    "dotenv-expand": "^11.0.6",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "helmet": "^7.1.0",
    "moment": "^2.30.1",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
